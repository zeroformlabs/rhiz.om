{
  "name": "rhiz.om",
  "private": true,
  "packageManager": "npm@10.8.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "vercel": "vercel --prod",
    "dev": "npm run dev --workspace=@rhiz.om/web",
    "build": "npm run build --workspace=@rhiz.om/web",
    "start": "npm run start --workspace=@rhiz.om/web",
    "lint": "npm run lint --workspaces --if-present",
    "test": "npm run test --workspaces --if-present"
  },
  "devDependencies": {
    "turbo": "latest",
    "typescript": "^5.5.3"
  },
  "dependencies": {
    "@next-auth/prisma-adapter": "^1.0.7",
    "next-auth": "^4.24.11",
    "winston": "^3.17.0",
    "winston-browser": "^1.0.0"
  }
}
